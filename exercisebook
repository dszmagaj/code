#cwiczenie nr 9

def liczbap(number):
    print("Liczba pierwotna", number)
    liczba_pierwotna = number

    reverse_num = 0
    while number > 0:
        reminder = number % 10
        reverse_num = (reverse_num * 10) + reminder
        number = number // 10

    if liczba_pierwotna == reverse_num:
            print("Liczba palindromiczna")
    else:
            print("Liczba niepalindromiczna")

liczbap(121)
liczbap(125)

#cwiczenie nr 10
list1 = [10, 20, 25, 30, 35]
list2 = [40, 45, 60, 75, 90]

empty_list = []

def oddnum(list1, list2):
    empty_list = []
    for i in list1:
        if i % 2 != 0:
            empty_list.append(i)

    for i in list2:
        if i % 2 == 0:
            empty_list.append(i)
    return empty_list

list1 = [10, 20, 25, 30, 35]
list2 = [40, 45, 60, 75, 90]

print("empty_list:", oddnum(list1, list2))


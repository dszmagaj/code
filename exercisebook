#cwiczenie nr 4

def remove_chars(pynative, n):
    print("pynative", pynative)
    x = pynative[n:]
    return x

print("Removing characters from pynative")
print(remove_chars("pynative", 4))
print(remove_chars("pynative", 2))

#cwiczenie nr 5
numbers_x = [10, 20, 30, 40, 10]
numbers_y = [75, 65, 35, 75, 30]

def pierwsza_ostatnia(number):
    print("Dana lista", number)
    first_num = number[0]
    last_num = number [-1]

    if first_num == last_num:
        return True
    else:
        return False

print("Wynik równa się", pierwsza_ostatnia(numbers_x))
print("Wynik równa się", pierwsza_ostatnia(numbers_y))


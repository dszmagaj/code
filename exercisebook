#cwiczenie 14 XDDD nie zrobiłem tego co trzeba ale też git
size = 5
for i in range(size):
    for j in range(i):
        print(' ', end = '')
    for j in range(2*(size-i)-1):
        print(j+1, end= '')
    print()

print("\n")

for i in range(6, 0, -1):
    for j in range(0, i - 1):
        print("*", end=' ')
    print(" ")

print("\n")
#cwiczenie 15

def exponent(base, exp):
   num = exp
   result = 1
   while num > 0:
       result = result * base
       num = num - 1
   print(base, "podniesione do potęgi", exp, "wynosi", result)

exponent(2,5)

print("\n")


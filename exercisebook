# cwiczenie nr 1 ze strony https://pynative.com/python-basic-exercise-for-beginners/
import string


def mnozenie_lub_dodawanie(n1, n2):
    wynik = n1*n2
    if wynik <= 1000:
        return wynik
    else:
        return n1+n2

wynik = mnozenie_lub_dodawanie(20,30)
print("Wynik równa się", wynik)

wynik = mnozenie_lub_dodawanie(40,30)
print("Wynik równa się", wynik)

